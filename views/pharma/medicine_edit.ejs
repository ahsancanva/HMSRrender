<%- include('../partials/pharmasimheader') -%>

  <div class="contain">
    <div class="row">
      <div class="col-3">
        <%- include('../partials/pharmaSidebar') -%>

      </div>
      <div class="col-6">
        <form action="/pharma/medicine" method="post" enctype="multipart/form-data" style="border:1px solid #ccc">
          <div class="container" style="border: none;">
            <h1>Edit an Medicine</h1>
            <p>Please fill in this form to create an Medicine.</p>
            <hr>
            <label for="medicine_no"><b>medicine_no</b></label>
            <input type="text" value="<%=user.medicine_no%>" placeholder="Enter No" name="medicine_no" required>
            <br>
            <br>

            <label for="medicine_name"><b>medicine_Name</b></label>
            <input type="text"value="<%=user.medicine_name%>" placeholder="Enter Name" name="medicine_name" required>
            <br>
            <br>

            <label for="quantity"><b>Quantity</b></label>
            <input type="text"value="<%=user.quantity%>" placeholder="Enter quantity No" name="quantity" required>
            <br>
            <br>
            <label for="price"><b>Price</b></label>
            <input type="text"value="<%=user.price%>" placeholder="Enter price No" name="price" required>
            <br>
            <br>
            <label for="entry_date"><b>Entry_date</b></label>
            <input type="date" value="<%=user.entry_date%>" placeholder="Enter entry_date" name="entry_date" style="background-color: #F5F5F5; width: 100%;" required>
            <br>
            <br>

            <div class="clearfix">
              <button type="submit" class="signupbtn w-100">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


  <% if(typeof message !=='undefined' ){ %>
    <div class="container">
      <div class="col-8 w-50" style="margin: 10px auto;">
        <p style="color:white; padding: 2rem; background-color: blue; border-radius: 5px;">
          <%= message %>
        </p>
      </div>
    </div>
    <% } %>

      <%- include('../partials/pharmasimfooter') -%>