<%- include('../partials/receptionsimheader') -%>

  <div class="contain">
    <div class="row">
      <div class="col-3">
        <%- include('../partials/receptionSidebar') -%>
      </div>
      <div class="col-6">
        <form action="/reception/operation" method="post" style="border:1px solid #ccc">
          <div class="container" style="border: none;">
            <h1>Create an Operation Report</h1>
            <p>Please fill in this form to create an Operation Report.</p>
            <hr>
            <label for="operation_name"><b>Operation Name</b></label>
            <input type="text" placeholder="Enter Operation_Name" name="operation_name" required>

            <label for="patient_name"><b>Patient Name</b></label>
            <input type="text" placeholder="Enter patient_Name" name="patient_name" required>

            <label for="sarjan_name"><b>Sarjan Name</b></label>
            <input type="text" placeholder="Enter sarjan_Name" name="sarjan_name" required>
            <br>
            <br>

            <label for="date"><b>Date</b></label>
            <input type="date" placeholder="Enter date" name="date" required style="background-color: #F5F5F5; width: 100%;">

            <br>
            <br>
            <div class="col-12">
                <h6 style="font-weight: bold;">Selct One</h6>
              <label for="">Success</label>
              <input type="radio" name="status" value="1">
              <label for="">fallied</label>
              <input type="radio" name="status" value="0">
            </div>

            <br>
            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" name="email" required>

            <label for="mobile"><b>Mobile #</b></label>
            <input type="text" placeholder="Enter mobile number" name="mobile" required>


            <div class="clearfix">
              <button type="submit" class="signupbtn">Create an Account</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


  <% if(typeof message !=='undefined' ){ %>
    <div class="container">
      <div class="col-8 w-50" style="margin: 10px auto;">
        <p style="color:white; padding: 2rem; background-color: blue; border-radius: 5px;">
          <%= message %>
        </p>
      </div>
    </div>
    <% } %>

