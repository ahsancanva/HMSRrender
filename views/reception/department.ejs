<%- include('../partials/receptionsimheader') -%>

  <div class="contain">
    <div class="row">
      <div class="col-3">
        <%- include('../partials/receptionSidebar') -%>
      </div>
      <div class="col-6">
        <form action="/reception/department" method="post" enctype="multipart/form-data" style="border:1px solid #ccc">
          <div class="container" style="border: none;">
            <h1>Create an Account</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="name"><b>Name</b></label>
            <input type="text" placeholder="Enter Name" name="name" required>

            <label for="mobile"><b>Mobile</b></label>
            <input type="text" placeholder="Enter Mobile No" name="mobile" required>
            <br>
            <div class="col-12">
              <label for="">male</label>
              <input type="radio" name="gender" value="1">
              <label for="">female</label>
              <input type="radio" name="gender" value="0">
            </div>
            <br>
            <label for="department"><b>Department</b></label>
            <input type="text" placeholder="Enter Department" name="department" required>

            <label for="image"><b>Image</b></label>
            <input type="file" name="image" required>
            <br>
            <br>
            <div class="col-12">
              <p style="text-align: left;">Select One:</p>
              <label for="">Reception</label>
              <input type="radio" name="reception" value="1">
              <label for="">Doctor</label>
              <input type="radio" name="doctor" value="1">
              <label for="">Nurse</label>
              <input type="radio" name="nurse" value="1">
              <label for="">patient</label>
              <input type="radio" name="patient" value="1">
              <label for="">Accountant</label>
              <input type="radio" name="accountant" value="1">
              <label for="">lababratories</label>
              <input type="radio" name="lab" value="1">
              <label for="">Pharmacist</label>
              <input type="radio" name="pharmacist" value="1">
            </div>
            <br>
            <label for="email"><b>Email</b></label>
            <input type="email" placeholder="Enter Email" name="email" required>

            <label for="password"><b>Password</b></label>
            <input type="password" placeholder="Enter Password" name="password" required>

            <label>
              <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
            </label>


            <div class="clearfix">
              <button type="submit" class="signupbtn">Create an Account</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


  <% if(typeof message !=='undefined' ){ %>
    <div class="container">
      <div class="col-8 w-50" style="margin: 10px auto;">
        <p style="color:white; padding: 2rem; background-color: blue; border-radius: 5px;">
          <%= message %>
        </p>
      </div>
    </div>
    <% } %>

      <%- include('../partials/receptionsimfooter') -%>