<%- include('../partials/receptionsimheader') -%>

    <div class="contain">
        <div class="row">
            <div class="col-3">
                <%- include('../partials/receptionSidebar') -%>
            </div>
            <div class="col-6">
                <form action="" method="post" style="border:1px solid #ccc">
                    <div class="container" style="border: none;">
                        <h1>Edit an Bed_allotment</h1>
                        <p>Please fill in this form to create an Bed_allotment.</p>
                        <hr>
                        <label for="bed_no"><b>Bed_no</b></label>
                        <input type="text" value="<%=user.bed_no%>" placeholder="Enter bed_no" name="bed_no" required>

                        <label for="patient_name"><b>Patient Name</b></label>
                        <input type="text" value="<%=user.patient_name%>" placeholder="Enter patient_Name" name="patient_name" required>
                        <div class="row">

                            <div class="col-12">
                                <label for="cars">Bed_Type</label>
                                <select name="birth_type" value="<%=user.bed_type%>" id="cars" style="background-color: #F5F5F5; width: 100%;">
                                    <option value="Standard">Standard </option>
                                    <option value="ICU">ICU </option>
                                    <option value="Pediatric">Pediatric</option>
                                    <option value="Emergency_ward">Emergency ward</option>
                                </select>
                                <br><br>
                            </div>
                        </div>

                        <label for="allotment_date"><b>Allotment Date</b></label>
                        <input type="date" value="<%=user.allotment_date%>" placeholder="Enter allotment_date" name="allotment_date" required
                            style="background-color: #F5F5F5; width: 100%;">

                        <br>
                        <br>
                        <div class="col-12">
                            <h6 style="font-weight: bold;">Status</h6>
                            <label for="">Success</label>
                            <input type="radio" name="status" value="1">
                            <label for="">fallied</label>
                            <input type="radio" name="status" value="0">
                        </div>
                        <br>

                        <label for="discharge_date"><b>Discharge_Date</b></label>
                        <input type="date" value="<%=user.discharge_date%>" placeholder="Enter discharge_date" name="discharge_date" required
                            style="background-color: #F5F5F5; width: 100%;">

                        <label for="email"><b>Email</b></label>
                        <input type="email" value="<%=user.email%>" placeholder="Enter Email" name="email" required>

                        <label for="mobile"><b>Mobile #</b></label>
                        <input type="text" value="<%=user.mobile%>" placeholder="Enter mobile number" name="mobile" required>
                        <div class="col-md-12">
                            <input type="hidden" name="user_id" value="<%=user._id%>">
                        </div>

                        <div class="clearfix">
                            <button type="submit" class="signupbtn">Create an Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <% if(typeof message !=='undefined' ){ %>
        <div class="container">
            <div class="col-8 w-50" style="margin: 10px auto;">
                <p style="color:white; padding: 2rem; background-color: blue; border-radius: 5px;">
                    <%= message %>
                </p>
            </div>
        </div>
        <% } %>

            <%- include('../partials/receptionsimfooter') -%>