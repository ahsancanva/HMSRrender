<%- include('../partials/receptionsimheader') -%>

  <div class="contain">
    <div class="row">
      <div class="col-3">
        <%- include('../partials/receptionSidebar') -%>
      </div>
      <div class="col-6">
        <form action="/reception/appointment" method="post" enctype="multipart/form-data" style="border:1px solid #ccc">
          <div class="container" style="border: none;">
            <h1>Edit an Appointment</h1>
            <p>Please fill in this form to create an account.</p>
            <hr>
            <label for="name"><b>Patient_Name</b></label>
            <input type="text"  value="<%=user.patient_name%>"  placeholder="Enter Name" name="patient_name" required>

            <label for="name"><b>Doctor_Name</b></label>
            <input type="text" value="<%=user.doctor_name%>"  placeholder="Enter Name" name="doctor_name" required>

            <div class="col-12">
              <label for="">male</label>
              <input type="radio" name="gender" value="1">
              <label for="">female</label>
              <input type="radio" name="gender" value="0">
            </div>
            <br>
            <label for="image"><b>Image</b></label>
            <input type="file" name="image" required>
            <br>
            <br>
            <label for="appointment_date"><b>Appointment_Date</b></label>
            <input type="date" value="<%=user.appointment_date%>" name="appointment_date" style="background-color: #F5F5F5; width: 100%;" required>
            <br>
            <br>
            <label for="time"><b>Time</b></label>
            <input type="text" name="time" value="<%=user.time%>" required>
            <br>
            <br>
            <label for="amount"><b>Amount</b></label>
            <input type="text" name="amount" value="<%=user.amount%>" required>
            <br>
            <br>
            <label for="mobile"><b>Mobile</b></label>
            <input type="text"  value="<%=user.mobile%>"  placeholder="Enter Mobile No" name="mobile" required>
            <br>
            <label for="email"><b>Email</b></label>
            <input type="email"  value="<%=user.email%>"  placeholder="Enter Email" name="email" required>


      
            <div class="clearfix">
              <button type="submit" class="signupbtn  w-100">Submit</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>


  <% if(typeof message !=='undefined' ){ %>
    <div class="container">
      <div class="col-8 w-50" style="margin: 10px auto;">
        <p style="color:white; padding: 2rem; background-color: blue; border-radius: 5px;">
          <%= message %>
        </p>
      </div>
    </div>
    <% } %>

      <%- include('../partials/receptionsimfooter') -%>